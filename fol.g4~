//-----------------------------------------------------------------------------
//     PARSER RULES
//-----------------------------------------------------------------------------

grammar fol;

condition: sentence EOF! ;

sentence	
    :   LPAREN? ((FORALL | EXISTS) TERM)? implication RPAREN? ;

implication
	:	disjunction (IMPLIES disjunction)* ;

disjunction
	:	conjunction (OR conjunction)* ;

conjunction
	:	negation (AND negation)* ;

negation 
	:	NOT^? (relation | LPAREN sentence RPAREN) ;


relation 
	:	RELNAME binaryarg
	| 	RELNAME unaryarg
	|	RELNAME ;

binaryarg
	:	LPAREN TERM ',' TERM RPAREN ;

unaryarg
	:	LPAREN TERM RPAREN ;


//-----------------------------------------------------------------------------
// 	LEXER RULES
//-----------------------------------------------------------------------------

LPAREN  : '(' ;
RPAREN  : ')' ;
AND     : 'âˆ§' ;
OR      : 'âˆ¨' ;
NOT     : 'Â¬' ;
IMPLIES : 'â†’' ;
FORALL  : 'Forall' ;
EXISTS  : 'Exists' ;

TERM: [a-zA-Z] [a-zA-Z0-9'_']* ;
RELNAME: [a-z] [a-zA-Z0-9'_']* ;
WS : [ \t\r\n]+ -> skip ;










